{
  "name": "node-sentry-error-reporter",
  "version": "0.0.0-semantic-release",
  "description": "Automatically reports Node crashes to Sentry if SENTRY_URL is in the environment",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/node-sentry-error-reporter/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm test"
      ],
      "pre-push": [
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/bahmutov/node-sentry-error-reporter#readme",
  "keywords": [
    "crash",
    "error",
    "exception",
    "node",
    "raven",
    "reporter",
    "sentry"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/node-sentry-error-reporter.git"
  },
  "scripts": {
    "format": "standard-format -w index.js src/*.js",
    "issues": "git-issues",
    "lint": "standard --verbose index.js src/*.js",
    "pretest": "npm run format && npm run lint",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "commit": "commit-wizard",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "git-issues": "1.2.0",
    "mocha": "2.4.5",
    "pre-git": "3.7.0",
    "standard": "6.0.8",
    "standard-format": "2.1.1",
    "semantic-release": "^4.3.5"
  },
  "dependencies": {
    "check-more-types": "2.12.1",
    "lazy-ass": "1.4.0",
    "lodash.memoize": "4.0.1",
    "raven": "0.10.0"
  }
}
